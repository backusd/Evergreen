{
	"button2_details": {
		"Margin": [ 5, 5, 5, 5 ],
		"Padding": [ 10, 5, 10, 5 ]
	},

	"row_max_min": {
		"MaxHeight": "1000",
		"import": "row_min.json"
	},

	"MenuBarLayoutPosition": {
		"Row": 0,
		"Column": 0,
		"ColumnSpan": 3
	},

	"CustomTextStyle": {
		"Type": "TextStyle",
		"Brush": "Green",
		"FontFamily": "Arial",
		"FontSize": 24
	},




	"SolidBrush1": {
		"Brush": {
			"Type": "SolidColorBrush",
			"Color": "Green"
		}
	},
	"SolidBrush2": {
		"Brush": {
			"Type": "SolidColorBrush",
			"Color": [ 0.3, 0.45, 0.22 ]
		}
	},

	"GradientBrush1": {
		"Brush": {
			"Type": "GradientBrush",
			"Stops": [
				{
					"Color": "Yellow",
					"Position": 0.0
				},
				{
					"Color": "Red",
					"Position": 0.5
				},
				{
					"Color": "Blue",
					"Position": 1.0
				}
			],
			"Gamma": "D2D1_GAMMA_2_2",
			"ExtendMode": "D2D1_EXTEND_MODE_CLAMP",
			"Axis": "Horizontal"
		}
	},



	"RadialBrush1": {
		"Brush": {
			"Type": "RadialBrush",
			"Stops": [
				{
					"Color": "Yellow",
					"Position": 0.0
				},
				{
					"Color": "Blue",
					"Position": 1.0
				}
			],
			"OriginOffset": [ 0.0, 1.5 ],
			"Gamma": "D2D1_GAMMA_2_2",
			"ExtendMode": "D2D1_EXTEND_MODE_CLAMP"
		}
	},




	"BitmapBrush1": {
		"Brush": {
			"Type": "BitmapBrush",
			"File": "evergreen-image-1.jpg",
			"TransformMethod": "KEEP_XY_RATIO_FILL_RECT",
			"ExtendModeX": "D2D1_EXTEND_MODE_CLAMP",
			"ExtendModeY": "D2D1_EXTEND_MODE_CLAMP",
			"InterpolationMode": "Linear"
		}
	},




	"root": {
		"Brush": "Gray",
		"RowDefinitions": [
			{
				"Height": "50",
				"BottomAdjustable": true,
				"MinHeight": "40"
			},
			{
				"Height": "20%",
				"TopAdjustable": true,
				"import": "row_max_min"
			},
			{
				"Height": "1*"
			}
		],
		"ColumnDefinitions": [
			{
				"Width": "50%",
				"RightAdjustable": true,
				"MinWidth": "20%"
			},
			{
				"Width": "30",
				"LeftAdjustable": true
			},
			{ "Width": "2*" },
			{ "Width": "1*" }
		],

		"MenuBarLayout": {
			"Type": "Layout",
			"Brush": "Green",
			"import": "MenuBarLayoutPosition",
			"RowDefinitions": [ { "Height": "1*" } ],
			"ColumnDefinitions": [
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": "1*" }
			],

			"FileText": {
				"Type": "Text",
				"Text": "File",
				"Style": "CustomTextStyle",
				"Brush": "Purple"
			},

			"EditText": {
				"Type": "Text",
				"Text": "Edit",
				"Column": 1,
				"Style": "CustomTextStyle",
				"Brush": "Black",
				"Margin": [ 5, 10 ]
			},

			"ViewText": {
				"Type": "Text",
				"Text": "0xE10F",
				"Column": 2,
				"import": "BitmapBrush1",
				"FontFamily": "Segoe MDL2 Assets",
				"FontSize": 30,
				"FontWeight": "Bold",
				"FontStyle": "Normal",
				"FontStretch": "Expanded",
				"TextAlignment": "Center",
				"ParagraphAlignment": "Center",
				"WordWrapping": "None"
			}



		},


		"TestButton": {
			"Type": "Button",
			"Content": "This is a test",
			"Row": 0,
			"Column": 0,
			"import": "button_details.json",
			"OnClick": "TestButtonOnClick"
		},

		"TestButton2": {
			"Type": "Button",
			"Content": "This is a second test",
			"Row": 0,
			"Column": 1,
			"ColumnSpan": 2,
			"import": "button2_details",
			"OnClick": "TestButton2OnClick"
		}
	}
}