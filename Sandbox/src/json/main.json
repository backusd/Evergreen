{
	"button2_details": {
		"Margin": [ 5, 5, 5, 5 ],
		"Padding": [ 10, 5, 10, 5 ]
	},

	"row_max_min": {
		"MaxHeight": "1000",
		"import": "row_min.json"
	},

	"root": {

		"RowDefinitions": [
			{
				"Height": "50",
				"BottomAdjustable": true,
				"MinHeight": "40"
			},
			{
				"Height": "20%",
				"TopAdjustable": true,
				"import":	"row_max_min"
			},
			{
				"Height": "1*"
			}
		],
		"ColumnDefinitions": [
			{
				"Width": "50%",
				"RightAdjustable": true,
				"MinWidth": "20%"
			},
			{
				"Width": "30",
				"LeftAdjustable": true
			},
			{ "Width": "2*" },
			{ "Width": "1*" }
		],

		"MenuBarLayout": {
			"Type": "Layout",
			"Row": 0,
			"Column": 0,
			"ColumnSpan": 3,
			"RowDefinitions": [ { "Height": "1*" } ],
			"ColumnDefinitions": [
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": "1*" }
			],

			"MenuBarSubLayout": {
				"Type": "Layout",

				"RowDefinitions": [
					{ "Height": "1*" },
					{ "Height": "1*" }
				],
				"ColumnDefinitions": [
					{ "Width": "1*" },
					{ "Width": "1*" }
				]
			}

		},

		"TestButton": {
			"Type": "Button",
			"Content": "This is a test",
			"Row": 0,
			"Column": 0,
			"import": "button_details.json",
			"OnClick": "TestButtonOnClick"
		},

		"TestButton2": {
			"Type": "Button",
			"Content": "This is a second test",
			"Row": 0,
			"Column": 1,
			"ColumnSpan" : 2,
			"import": "button2_details",
			"OnClick": "TestButton2OnClick"
		}
	}
}