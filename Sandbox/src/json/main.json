{
	"button2_details": {
		"Margin": [ 5, 5, 5, 5 ],
		"Padding": [ 10, 5, 10, 5 ]
	},

	"row_max_min": {
		"MaxHeight": "1000",
		"import": "row_min.json"
	},

	"MenuBarLayoutPosition": {
		"Row": 0,
		"Column": 0,
		"ColumnSpan": 3
	},

	"FileEditViewTextStyle": {
		"Type": "TextStyle",
		"Brush": "Green",
		"FontFamily": "Calibri",
		"FontSize": 18,
		"FontWeight": "Normal",
		"FontStyle": "Normal",
		"FontStretch": "Normal",
		"TextAlignment": "Center",
		"ParagraphAlignment": "Center",
		"WordWrapping": "None"
	},




	"SolidBrush1": {
		"Brush": {
			"Type": "SolidColorBrush",
			"Color": "Green"
		}
	},
	"SolidBrush2": {
		"Brush": {
			"Type": "SolidColorBrush",
			"Color": [ 0.3, 0.45, 0.22 ]
		}
	},

	"GradientBrush1": {
		"Brush": {
			"Type": "GradientBrush",
			"Stops": [
				{
					"Color": "Yellow",
					"Position": 0.0
				},
				{
					"Color": "Red",
					"Position": 0.5
				},
				{
					"Color": "Blue",
					"Position": 1.0
				}
			],
			"Gamma": "D2D1_GAMMA_2_2",
			"ExtendMode": "D2D1_EXTEND_MODE_CLAMP",
			"Axis": "Horizontal"
		}
	},


	"RadialBrush1": {
		"Brush": {
			"Type": "RadialBrush",
			"Stops": [
				{
					"Color": "Yellow",
					"Position": 0.0
				},
				{
					"Color": "Blue",
					"Position": 1.0
				}
			],
			"OriginOffset": [ 0.0, 1.5 ],
			"Gamma": "D2D1_GAMMA_2_2",
			"ExtendMode": "D2D1_EXTEND_MODE_CLAMP"
		}
	},


	"BitmapBrush1": {
		"Brush": {
			"Type": "BitmapBrush",
			"File": "evergreen-image-1.jpg",
			"TransformMethod": "KEEP_XY_RATIO_FILL_RECT",
			"ExtendModeX": "D2D1_EXTEND_MODE_CLAMP",
			"ExtendModeY": "D2D1_EXTEND_MODE_CLAMP",
			"InterpolationMode": "Linear"
		}
	},




	"root": {
		"Brush": "Gray",
		"RowDefinitions": [
			{
				"Height": "50",
				"BottomAdjustable": true,
				"MinHeight": "40"
			},
			{
				"Height": "20%",
				"TopAdjustable": true,
				"import": "row_max_min"
			},
			{
				"Height": "1*"
			}
		],
		"ColumnDefinitions": [
			{
				"Width": "50%",
				"RightAdjustable": true,
				"MinWidth": "20%"
			},
			{
				"Width": "30",
				"LeftAdjustable": true
			},
			{ "Width": "2*" },
			{ "Width": "1*" }
		],

		"MenuBarLayout": {
			"Type": "Layout",
			"Brush": "Green",
			"import": "MenuBarLayoutPosition",
			"RowDefinitions": [ { "Height": "1*" } ],
			"ColumnDefinitions": [
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": 50 },
				{ "Width": 100 },
				{ "Width": 200 },
				{ "Width": 100 },
				{ "Width": "1*" }
			],

			"FileText": {
				"Type": "Text",
				"Text": "File",
				"Style": "FileEditViewTextStyle",
				"Brush": "White"
			},

			"EditText": {
				"Type": "Text",
				"Text": "Edit",
				"Column": 1,
				"Style": "FileEditViewTextStyle",
				"Brush": "White"
			},

			"ViewText": {
				"Type": "Text",
				"Text": "View",
				"Column": 2,
				"Style": "FileEditViewTextStyle",
				"Brush": "White"
			},

			"HouseText": {
				"Type": "Text",
				"Text": "0xE10F",
				"Column": 3,
				"import": "BitmapBrush1",
				"FontFamily": "Segoe MDL2 Assets",
				"FontSize": 30,
				"FontWeight": "Bold",
				"FontStyle": "Normal",
				"FontStretch": "Expanded",
				"TextAlignment": "Center",
				"ParagraphAlignment": "Center",
				"WordWrapping": "None"
			},




			"TestButton1": {
				"Type": "Button",
				"Column": 4,
				"Margin": [ 5, 5, 5, 5 ],
				"BackgroundBrush": "Black",
				"BorderBrush": "Yellow",
				"BorderWidth": 3.0,

				"Content": {
					"Type": "Text",
					"Text": "Test Button 1",
					"Brush": "White",
					"FontFamily": "Arial",
					"FontSize": 12
				},

				"OnMouseEnter": "TestButtonOnMouseEnter",
				"OnMouseLeave": "TestButtonOnMouseLeave",
				"OnMouseMoved": "TestButtonOnMouseMoved",
				"OnMouseLButtonDown": "TestButtonOnMouseLButtonDown",
				"OnMouseLButtonUp": "TestButtonOnMouseLButtonUp",
				"OnClick": "TestButtonOnClick"
			},




			"TestButton2": {
				"Type": "Button",
				"Column": 5,
				"Margin": [ 5, 5, 5, 5 ],
				"BackgroundBrush": "Blue",
				"BorderBrush": "Red",
				"BorderWidth": 3.0,

				"Content": {
					"Type": "Layout",
					"RowDefinitions": [ { "Height": "1*" } ],
					"ColumnDefinitions": [
						{ "Width": "1*" },
						{ "Width": "1*" }
					],

					"Button2Text": {
						"Type": "Text",
						"Text": "Test Button 2",
						"Brush": "White",
						"FontFamily": "Arial",
						"FontSize": 10
					}
				},

				"OnMouseEnter": "TestButton2OnMouseEnter",
				"OnMouseLeave": "TestButton2OnMouseLeave",
				"OnMouseMoved": "TestButton2OnMouseMoved",
				"OnMouseLButtonDown": "TestButton2OnMouseLButtonDown",
				"OnMouseLButtonUp": "TestButton2OnMouseLButtonUp",
				"OnClick": "TestButton2OnClick"
			},




			"TestButton3": {
				"Type": "RoundedButton",
				"Column": 6,
				"Margin": [ 5, 5, 5, 5 ],
				"BackgroundBrush": "Blue",
				"BorderBrush": "Red",
				"BorderWidth": 3.0,
				"CornerRadiusX": 15.0,
				"CornerRadiusY": 25.0,

				"Content": {
					"Type": "Text",
					"Text": "Test Button 3",
					"Brush": "Black",
					"FontFamily": "Arial",
					"FontSize": 12
				}
			}



		}
	}
}