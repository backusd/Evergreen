{
	"button2_details": {
		"Margin": [ 5, 5, 5, 5 ],
		"Padding": [ 10, 5, 10, 5 ]
	},

	"row_max_min": {
		"MaxHeight": "1000",
		"import": "row_min.json"
	},

	"root": {
		"Name": "Root Layout",

		"RowDefinitions": [
			{
				"Height": "50",
				"BottomAdjustable": true,
				"MaxHeight": "100",
				"MinHeight": "40"
			},
			{
				"Height": "20%",
				"TopAdjustable": true,
				"import":	"row_max_min"
			},
			{ "Height": "1*" }
		],

		"ColumnDefinitions": [
			{
				"Width": "50%",
				"RightAdjustable": true
			},
			{
				"Width": "30",
				"LeftAdjustable": true
			},
			{ "Width": "2*" },
			{ "Width": "1*" }
		],

		"TestButton": {
			"Type": "Button",
			"Content": "This is a test",
			"Row": 0,
			"Column": 0,
			"import": "button_details.json",
			"OnClick": "TestButtonOnClick"
		},

		"TestButton2": {
			"Type": "Button",
			"Content": "This is a second test",
			"Row": 0,
			"Column": 1,
			"ColumnSpan" : 2,
			"import": "button2_details",
			"OnClick": "TestButton2OnClick"
		}
	}
